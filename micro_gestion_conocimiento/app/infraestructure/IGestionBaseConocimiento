from abc import ABC, abstractmethod

class IGestionBaseConocimiento(ABC):
    @abstractmethod
    def load_ontology(self, path: str):
        """Carga una ontología desde un archivo."""
        pass

    @abstractmethod
    def save_ontology(self, path: str):
        """Guarda la ontología en un archivo."""
        pass

    @abstractmethod
    def query(self, sparql_query: str) -> list:
        """Ejecuta una consulta SPARQL y devuelve los resultados."""
        pass

    @abstractmethod
    def insert_individual(self, uri: str, class_uri: str):
        """Inserta un nuevo individuo en la ontología."""
        pass

    @abstractmethod
    def insert_data_property(self, individual_uri: str, property_uri: str, value):
        """Inserta una propiedad de datos en un individuo."""
        pass

    @abstractmethod
    def update_data_property(self, individual_uri: str, property_uri: str, new_value):
        """Actualiza una propiedad de datos en un individuo."""
        pass

    @abstractmethod
    def delete_individual(self, individual_uri: str):
        """Elimina un individuo de la ontología."""
        pass